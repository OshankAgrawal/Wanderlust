<% layout("/layouts/boilerplate") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>Edit Listings</h3>
            <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <lable for="title" class="form-label">Title</lable>
                    <input
                        type="text"
                        name="listing[title]"
                        value="<%= listing.title %>"
                        class="form-control"
                        required
                    >
                    <div class="valid-feedback">Title looks good!</div>
                    <div class="invalid-feedback">Please enter a catchy title</div>
                </div>
                
                <div class="mb-3">
                    <lable for="description" class="form-label">Description</lable>
                    <textarea
                        name="listing[description]"
                        type="text"
                        class="form-control"
                        required
                    ><%= listing.description %></textarea>
                    <div class="valid-feedback">Description looks good!</div>
                    <div class="invalid-feedback">Please enter a short description</div>
                </div>
                
                <div class="card col-4 show-card listing-card">
                    <p>Original Listing Image</p>
                    <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing image">
                </div>
                
                <div class="mb-3">
                    <lable for="image" class="form-label">Upload new Image</lable>
                    <input
                        type="file"
                        name="listing[image]"
                        class="form-control"
                    >
                </div>

                <div class="row">
                    <div class="mb-3 col-md-4">
                        <lable for="price" class="form-label">Enter price</lable>
                        <input
                            type="number"
                            name="listing[price]"
                            value="<%= listing.price %>"
                            class="form-control"
                            required
                        >
                        <div class="valid-feedback">Price looks good!</div>
                        <div class="invalid-feedback">Price should be valid</div>
                    </div>
                    
                    <div class="mb-3 col-md-8">
                        <lable for="location" class="form-label">Enter location</lable>
                        <input
                            type="text"
                            name="listing[location]"
                            value="<%= listing.location %>"
                            class="form-control"
                            required
                        >
                        <div class="valid-feedback">Location looks good!</div>
                        <div class="invalid-feedback">Location name should be valid</div>
                    </div>
                </div>
                
                <div class="mb-3">
                    <lable for="country" class="form-label">Enter country</lable>
                    <input
                        type="text"
                        name="listing[country]"
                        value="<%= listing.country %>"
                        class="form-control"
                        required
                    >
                    <div class="valid-feedback">Country looks good!</div>
                    <div class="invalid-feedback">Country name should be valid</div>
                </div>
                
                <button class="btn btn-dark edit-btn mb-3">Edit</button>
            </form>
        </div>
    </div>
</body>