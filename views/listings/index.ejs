<% layout("/layouts/boilerplate") %>
<style>
    #filters{
        display: flex;
        flex-wrap: wrap;
        align-items: center;
    }
    .filter{
        text-align: center;
        margin-right: 1rem;
        opacity: 0.7;
    }
    .filter:hover{
        opacity: 1;
        cursor: pointer;
    }
    .filter-text:hover{
        text-decoration: underline;
    }
    .filter p{
        font-size: 0.8rem;
    }
    .tax-info{
        display: none;
    }
    .tax-toggle{
        border: 1px solid black;
        border-radius: 1rem;
        height: 3.25rem;
        padding: 1rem;
        display: flex;
        align-items: center;
        margin-left: 6rem;
    }
</style>
<body>
    <div id="filters" class="mt-3">
        <div class="filter">
            <div><i class="fa-solid fa-fire"></i><br></div>
            <p class="filter-text">Trending</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-bed"></i><br></div>
            <p class="filter-text">Rooms</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-mountain-city"></i><br></div>
            <p class="filter-text">Iconic Cities</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-mountain"></i><br></div>
            <p class="filter-text">Mountains</p>
        </div>
        <div class="filter">
            <div><i class="fa-brands fa-fort-awesome"></i><br></div>
            <p class="filter-text">Castles</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-person-swimming"></i><br></div>
            <p class="filter-text">Amazing Pools</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-campground"></i><br></div>
            <p class="filter-text">Camping</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-cow"></i><br></div>
            <p class="filter-text">Farms</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-snowflake"></i><br></div>
            <p class="filter-text">Arctic</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-igloo"></i><br></div>
            <p class="filter-text">Domes</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-ferry"></i><br></div>
            <p class="filter-text">Boats</p>
        </div>

        <div class="tax-toggle">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
                <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
            </div>
        </div>

    </div>
    <div class="row row-col-lg-3 row-col-md-2 row-col-sm-1 mt-3">
        <% for(let listings of allListings) {%>
            <div class="card listing-card" style="width: 20rem;">
                <a href="/listings/<%= listings._id %>">
                    <img src="<%= listings.image.url %>" class="card-img-top" alt="<%= listings.image.filename %>" style="height: 20rem;">
                    <div class="card-img-overlay"></div>
                </a>
                
                <div class="card-body">
                    <p class="card-text">
                        <b><%= listings.title %></b>
                        <br>
                        <%= new Intl.NumberFormat('en-IN', { 
                            style: 'currency', 
                            currency: 'INR', 
                            minimumFractionDigits: 2 
                        }).format(listings.price) %> / night
                        <i class="tax-info">+18% GST</i>
                    </p>
                </div>
            </div>
        <% } %>
    </div>

    <script>
        let taxSwitch = document.getElementById("switchCheckDefault");
        taxSwitch.addEventListener("click", () => {
            let taxInfo = document.getElementsByClassName("tax-info");
            for(info of taxInfo){
                if(info.style.display != "inline"){
                    info.style.display = "inline";
                }else{
                    info.style.display = "none";
                }
            }
        });
    </script>

</body>